if [ -z "$TMUX" ]
then
    tmux attach -t TMUX || tmux new -s TMUX
fi

_comp_options+=(globdots)

# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:/usr/local/bin:$PATH

alias vim='nvim'
alias ..='cd ..'
alias ...='cd ../..'
alias lsd='lsd -Fla'
alias ....='cd ../../..'

# DEPRACATED: I no longer use fzf for such operations
alias fzfp='fzf --preview="bat --color=always --style=numbers --line-range :500 {}"'
alias fzfn='nvim $(fzf --preview="bat --color=always --style=numbers --line-range :500 {}")'

# I use television now
alias tvp='tv --preview="bat --color=always --style=numbers --line-range :500 {}"'
alias tvn='nvim $(tv --preview="bat --color=always --style=numbers --line-range :500 {}")'

export LANG=en_US.UTF-8

if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='nvim'
fi

# fnm
export PATH="/Users/tentacles/Library/Application Support/fnm:$PATH"
eval "`fnm env`"

# zoxide
eval "$(zoxide init zsh)"

# thefuck
eval $(thefuck --alias)

source /opt/homebrew/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source /opt/homebrew/share/zsh-autosuggestions/zsh-autosuggestions.zsh

# starship 
eval "$(starship init zsh)"

# bun completions
[ -s "/Users/tentacles/.bun/_bun" ] && source "/Users/tentacles/.bun/_bun"

# bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

eval "$(atuin init zsh)"
bindkey "^k" _atuin_search_widget
bindkey '^y' autosuggest-accept

# deno
export DENO_INSTALL="/Users/tentacles/.deno"
export PATH="$DENO_INSTALL/bin:$PATH"

# Created by `pipx` on 2024-10-27 13:45:43
export PATH="$PATH:/Users/tentacles/.local/bin"

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/tentacles/google-cloud-sdk/path.zsh.inc' ]; then . '/Users/tentacles/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/Users/tentacles/google-cloud-sdk/completion.zsh.inc' ]; then . '/Users/tentacles/google-cloud-sdk/completion.zsh.inc'; fi

export PATH="$HOME/.local/bin:$PATH"

export TAVILY_API_KEY="*****************************************"

export GEMINI_API_KEY="***************************************"

export ANTHROPIC_API_KEY="************************************************************************************************************"

export GRAVEYARD="/Users/tentacles/.Trash"
